#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

PYTHON_PACKAGE_DIR=$(shell python -c "import distutils.sysconfig;print distutils.sysconfig.get_python_lib(True) ")


%:
	dh  $@

install_libqcow:
	# Set up libqcow package directories and files
	mkdir -p debian/libqcow/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.*.*.* debian/libqcow/usr/lib

install_libqcow_dev:
	# Set up libqcow-dev package directories and files
	mkdir -p debian/libqcow-dev/usr/include
	mkdir -p debian/libqcow-dev/usr/include/libqcow
	mkdir -p debian/libqcow-dev/usr/lib
	mkdir -p debian/libqcow-dev/usr/lib/pkgconfig
	mkdir -p debian/libqcow-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libqcow-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libqcow/*.h debian/libqcow-dev/usr/include/libqcow
	install -p -m755 debian/tmp/usr/lib/*.la debian/libqcow-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libqcow-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libqcow-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libqcow-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libqcow-dev/usr/share/man/man3

install_libqcow_tools:
	# Set up libqcow-tools package directories and files
	mkdir -p debian/libqcow-tools/usr/bin
	mkdir -p debian/libqcow-tools/usr/share/man/man1
	install -p -m755 debian/tmp/usr/bin/* debian/libqcow-tools/usr/bin
	install -p -m755 debian/tmp/usr/share/man/man1/* debian/libqcow-tools/usr/share/man/man1

install_libqcow_python:
	# Set up libqcow-python package directories and files
	mkdir -p debian/libqcow-python/$(PYTHON_PACKAGE_DIR)
	install -p -m775 debian/tmp$(PYTHON_PACKAGE_DIR)/pyqcow.* debian/libqcow-python$(PYTHON_PACKAGE_DIR)

override_dh_auto_configure:
	dh_auto_configure -- --enable-python

override_dh_auto_test:

override_dh_installinit: install_libqcow install_libqcow_dev install_libqcow_tools install_libqcow_python

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

override_dh_pysupport:

override_dh_shlibdeps:
	dh_shlibdeps -Llibqcow -l${PWD}/debian/tmp/usr/lib

override_dh_makeshlibs:
	dh_makeshlibs -Xlibqcow-dev

